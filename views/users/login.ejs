<% layout('/layouts/boilerplate') %> 

<div class="container justify-content-center align-items-center mt-3 mb-3">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1620215140243-2f5c4361566a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTl8fHBsYXlncm91bmR8ZW58MHx8MHx8&auto=format&fit=crop&w=500&q=60"
                 alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="car-title">Login</h5>
                    <form class = 'mb-3 validated-form' action='/login' method="POST"  novalidate>
                        <div class="mb-3">
                            <label for ='username' class="form-label">Username</label>
                            <input  class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                        </div>
                    
                        <div class="mb-3">
                            <label for ='Password' class="form-label">Password</label>
                            <input  class="form-control" type="password" id="Password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                          </div>
                
                    </form>
                </div>
                
                
            </div>
        </div>
    </div>
</div>